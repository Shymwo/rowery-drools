//-------Question-------------------------
rule "qinit"
	salience 2
	when
	then
		Engine.Question("who");
end
rule "qtype"
	when
		(
			Fact(name("who"), val ==0);
			or 
			Fact(name("who"), val ==1);
		)
	then
		Engine.Question("type");
end

rule "qwhat"
	when
		Fact(name("type"), val ==6);
	then
		Engine.Question("what");
end


